<resources>
    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- 标题颜色 -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/window_bg</item>
        <!--默认字体颜色-->
        <item name="android:textColor">@android:color/white</item>
        <!--默认字体大小-->
        <item name="android:textSize">@dimen/font_normal</item>
        <!--默认adapterview分割线-->
        <!--<item name="android:listDivider">@drawable/line_divider</item>-->
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--默认启动模式-->
        <item name="android:launchMode">singleTop</item>
        <!--默认竖屏-->
        <item name="android:screenOrientation">portrait</item>
        <!--<item name="android:contentDescription">@string/app_name</item>-->
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:selectableItemBackground">@drawable/item_background</item>
    </style>

    <style name="selectableItemBackground">
        <item name="android:background">@drawable/item_background</item>
    </style>

    <style name="Theme.NoTitle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:configChanges">orientation|keyboardHidden|navigation</item>
    </style>

    <style name="Theme.NoTitleFull" parent="Theme.NoTitle">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="IosDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>
